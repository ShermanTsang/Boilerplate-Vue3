{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "vite/client",
      "node",
      "qs"
    ],
    "baseUrl": "./",
    "paths": {
      "/@/*": ["./src/*"],
      "/@components/*": ["./src/components/*"],
      "/@views/*": ["./src/views/*"],
      "/@plugins/*": ["./src/plugins/*"],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
